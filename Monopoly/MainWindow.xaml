<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly"
        xmlns:Properties="clr-namespace:Monopoly.Properties" x:Class="Monopoly.MainWindow"
        mc:Ignorable="d"
        Title="Monopoly" Height="402.548" Width="623.829">
    <Grid>
        <Button x:Name="startButton" Content="New Game" Margin="0" Panel.ZIndex="1" Click="startButton_Click" FontWeight="Bold" FontSize="22" Height="32" VerticalAlignment="Center" HorizontalAlignment="Center" Width="152">
        </Button>
        <Button x:Name="optionButton" Content="Options" Margin="0,90,0,0" Panel.ZIndex="1" ClickMode="Press" Click="optionButton_Click" FontWeight="Bold" FontSize="22" HorizontalAlignment="Center" Width="152" Height="31" VerticalAlignment="Center"/>
