<UserControl x:Class="Monopoly.Model.Case.ChanceCase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monopoly.Model.Case"
             mc:Ignorable="d" 
             d:DesignHeight="236" d:DesignWidth="202">
    <Grid Width="202" Height="236">
        <TextBlock TextWrapping="Wrap" Text="{Binding ChanceName}" VerticalAlignment="Bottom" RenderTransformOrigin="0.506,1.153" Width="192" Height="69" TextAlignment="Center" Margin="0" FontSize="18" FontWeight="Bold">
        </TextBlock>
        <Button  TextOptions.TextFormattingMode="Display">
            <Button.Background>
                <ImageBrush ImageSource="{Binding ImageTemplate}"/>
            </Button.Background>
            <TextBlock TextWrapping="Wrap" Text="{Binding ChanceTxt}" VerticalAlignment="Bottom" RenderTransformOrigin="0.506,1.153" Width="192" Height="69" TextAlignment="Center" Margin="0" FontSize="18" FontWeight="Bold">
            </TextBlock>
        </Button>    </Grid>
</UserControl>
