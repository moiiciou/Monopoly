<local:BaseCard x:Class="Monopoly.Model.Card.ChanceCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monopoly.Model.Card"
             mc:Ignorable="d" 
             d:DesignHeight="250" Width="400">
    <Grid Background="White" >
        <Image x:Name="image" HorizontalAlignment="Left" Height="127" Margin="10,60,0,0" VerticalAlignment="Top" Width="142" Source="/Monopoly;component/ressources/templates/default/monopoly-man.jpg" RenderTransformOrigin="0.264,0.258"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="152,10,21,0" TextWrapping="Wrap" Text="{Binding Label}" VerticalAlignment="Top" Height="38" Width="227" FontWeight="Bold" FontSize="24"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="152,94,0,0" TextWrapping="Wrap" Text="{Binding Text}" VerticalAlignment="Top" Height="100" Width="227" FontSize="18"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="250" VerticalAlignment="Top" Width="400"/>

    </Grid>
</local:BaseCard>