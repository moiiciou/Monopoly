<UserControl x:Class="Monopoly.Model.UI.ChatBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Monopoly.Model.UI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="450">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="70" Margin="4,220,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="329" Background="{x:Null}"/>
        <Button x:Name="button" Content="&#xD;&#xA;SEND !" HorizontalAlignment="Left" Margin="333,220,0,0" VerticalAlignment="Top" Width="112" Height="70" Background="#FFF5F3F3" Click="Button_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="4,9,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="211" Width="436"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="281" Margin="4,9,0,0" VerticalAlignment="Top" Width="441"/>

    </Grid>
</UserControl>